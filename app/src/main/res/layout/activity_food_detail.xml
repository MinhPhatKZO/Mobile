<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Ảnh món ăn -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="#B71C1C">

            <ImageView
                android:id="@+id/img_food_detail"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/ic_launcher_foreground" />

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back_arrow"
                 />

        </FrameLayout>
        <!-- Thông tin món ăn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hamburger"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_food_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Burger"
                    android:textColor="#888"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_food_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 250.0"
                android:textColor="#B71C1C"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Tabs: Details / Reviews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_details"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textColor="#FFF"
                android:backgroundTint="#B71C1C" />

            <Button
                android:id="@+id/btn_reviews"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Reviews"
                android:textColor="#B71C1C"
                android:backgroundTint="#F0F0F0" />
        </LinearLayout>

        <!-- Mô tả -->
        <TextView
            android:id="@+id/tv_food_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="A hamburger is a sandwich with a beef patty, served between two soft buns, and topped with various condiments such as cheese, lettuce, and ketchup. It’s a popular..."
            android:textSize="14sp" />

        <!-- Chọn số lượng + Add to cart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Nút trừ -->

            <!-- Nút Add to Cart -->
            <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Add to Cart"
                android:textStyle="bold"
                android:backgroundTint="#B71C1C"
                android:textColor="#FFF" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
